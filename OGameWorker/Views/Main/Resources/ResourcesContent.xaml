<UserControl
    x:Class="OGameWorker.Views.Main.Resources.ResourcesContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel DataContext="{Binding ResourcesViewModel}" Orientation="Horizontal">
        <TextBox
            x:Name="Metal"
            BorderThickness="0"
            IsReadOnly="True"
            Text="{Binding Metal.Amount, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            x:Name="Crystal"
            BorderThickness="0"
            IsReadOnly="True"
            Text="{Binding Crystal.Amount, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            x:Name="Deuterium"
            BorderThickness="0"
            IsReadOnly="True"
            Text="{Binding Deuterium.Amount, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
</UserControl>
